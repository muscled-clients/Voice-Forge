# VoiceForge Environment Configuration Template
# Copy this file to .env and fill in your values

# ====================
# APPLICATION SETTINGS
# ====================
APP_NAME=VoiceForge
APP_URL=http://localhost:8000
APP_ENV=development  # development, staging, production
DEBUG=true

# ====================
# DATABASE CONFIGURATION
# ====================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=voiceforge_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# Database connection URL (alternative to individual settings)
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/voiceforge_db

# ====================
# SECURITY & AUTHENTICATION
# ====================
SECRET_KEY=your-secret-key-here-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-admin-password

# ====================
# EMAIL CONFIGURATION (SMTP)
# ====================
# Gmail example (requires app-specific password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_USE_TLS=true
FROM_EMAIL=noreply@voiceforge.ai
FROM_NAME=VoiceForge

# Alternative: SendGrid
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=your-sendgrid-api-key

# Alternative: AWS SES
# SMTP_HOST=email-smtp.us-east-1.amazonaws.com
# SMTP_PORT=587
# SMTP_USER=your-ses-smtp-username
# SMTP_PASSWORD=your-ses-smtp-password

# ====================
# STRIPE PAYMENT CONFIGURATION
# ====================
STRIPE_API_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID_FREE=price_free_plan_id
STRIPE_PRICE_ID_STARTER=price_starter_plan_id
STRIPE_PRICE_ID_PRO=price_pro_plan_id
STRIPE_PRICE_ID_ENTERPRISE=price_enterprise_plan_id

# ====================
# AWS S3 STORAGE (Optional)
# ====================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=voiceforge-audio-files
S3_BUCKET_TRANSCRIPTIONS=voiceforge-transcriptions

# ====================
# AZURE STORAGE (Alternative to S3)
# ====================
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=youraccountname;AccountKey=yourkey
AZURE_CONTAINER_NAME=voiceforge-files

# ====================
# WHISPER MODEL CONFIGURATION
# ====================
WHISPER_MODEL=base  # tiny, base, small, medium, large
WHISPER_DEVICE=cpu  # cpu, cuda
WHISPER_COMPUTE_TYPE=int8  # int8, float16, float32
WHISPER_LANGUAGE=en  # or auto for auto-detection
ENABLE_VAD=true  # Voice Activity Detection

# ====================
# REDIS CONFIGURATION (Optional - for caching/queues)
# ====================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# ====================
# MONITORING & LOGGING
# ====================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/voiceforge.log
ENABLE_SENTRY=false
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ====================
# API RATE LIMITING
# ====================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# ====================
# CORS SETTINGS
# ====================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE"]
CORS_ALLOW_HEADERS=["*"]

# ====================
# FILE UPLOAD SETTINGS
# ====================
MAX_FILE_SIZE_MB=100
ALLOWED_AUDIO_FORMATS=mp3,wav,m4a,mp4,ogg,flac,webm
UPLOAD_DIR=uploads/audio
TRANSCRIPTION_DIR=uploads/transcriptions

# ====================
# WORKER/QUEUE CONFIGURATION (Optional)
# ====================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ====================
# ANALYTICS (Optional)
# ====================
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token
AMPLITUDE_API_KEY=your-amplitude-key

# ====================
# EXTERNAL API KEYS (Optional)
# ====================
OPENAI_API_KEY=sk-your-openai-key  # For GPT enhancements
DEEPGRAM_API_KEY=your-deepgram-key  # Alternative STT provider
ASSEMBLYAI_API_KEY=your-assemblyai-key  # Alternative STT provider

# ====================
# DEVELOPMENT SETTINGS
# ====================
HOT_RELOAD=true
MOCK_PAYMENTS=true  # Use mock payment processing in development
DISABLE_EMAIL=false  # Disable email sending in development

# ====================
# PRODUCTION SETTINGS
# ====================
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem
BEHIND_PROXY=false  # Set true if behind nginx/apache
TRUSTED_HOSTS=["voiceforge.ai", "api.voiceforge.ai"]

# ====================
# BACKUP CONFIGURATION (Optional)
# ====================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Cron expression (2 AM daily)
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=voiceforge-backups

# ====================
# FEATURE FLAGS
# ====================
ENABLE_WEBSOCKET_TRANSCRIPTION=true
ENABLE_BATCH_PROCESSING=true
ENABLE_SPEAKER_DIARIZATION=true
ENABLE_TRANSLATION=false
ENABLE_SUMMARIZATION=false

# ====================
# NOTES
# ====================
# 1. Never commit the actual .env file to version control
# 2. Use strong, unique passwords for production
# 3. Rotate secrets regularly
# 4. Use environment-specific .env files (.env.development, .env.production)
# 5. For Gmail SMTP, use app-specific passwords: https://support.google.com/accounts/answer/185833
# 6. For production, consider using managed services like AWS SES, SendGrid, or Mailgun for email