# Application Settings
APP_NAME=VoiceForge
APP_VERSION=0.1.0
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Database Configuration
DATABASE_URL=postgresql+asyncpg://voiceforge:password@localhost:5432/voiceforge_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_TIMEOUT=30

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_POOL_SIZE=10

# Model Configuration
MODEL_CACHE_DIR=./models
DEFAULT_MODEL=whisper-large-v3
MODEL_DEVICE=cuda  # cuda, mps, or cpu
MODEL_BATCH_SIZE=32
MODEL_MAX_LENGTH=30  # seconds

# WebSocket Configuration
WS_MAX_CONNECTIONS=1000
WS_PING_INTERVAL=30
WS_PING_TIMEOUT=10
WS_MAX_MESSAGE_SIZE=10485760  # 10MB

# Security
SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
API_KEY_PREFIX=vf_

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT=1000/hour
RATE_LIMIT_AUTHENTICATED=10000/hour

# Storage
STORAGE_TYPE=local  # local, s3, minio
STORAGE_PATH=./storage
S3_BUCKET_NAME=voiceforge-audio
S3_REGION=us-east-1
S3_ACCESS_KEY=
S3_SECRET_KEY=

# Monitoring
PROMETHEUS_ENABLED=True
PROMETHEUS_PORT=9090
OPENTELEMETRY_ENABLED=False
OPENTELEMETRY_ENDPOINT=http://localhost:4317
SENTRY_DSN=

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
TORCH_CUDA_ARCH_LIST=7.5;8.0;8.6
CUDA_LAUNCH_BLOCKING=0

# Worker Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_TIME_LIMIT=300
CELERY_TASK_SOFT_TIME_LIMIT=240
WORKER_CONCURRENCY=4

# Feature Flags
ENABLE_DIARIZATION=True
ENABLE_PUNCTUATION=True
ENABLE_LANGUAGE_DETECTION=True
ENABLE_CUSTOM_MODELS=False
ENABLE_ANALYTICS=True

# External Services
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
HUGGINGFACE_TOKEN=